############################################################
# HUD SPECIFIC KEYMAPS
# This keymap will have either soldier or vehicle keymap as a child
############################################################

# Weapon Controls
#----------------------------
km_addbinding "Left Mouse Button" "Weapon Fire"
km_addbinding "Joystick Button 1" "Weapon Fire"

km_addbinding "Right Mouse Button" "Change Fire Mode"
km_addbinding "Joystick Button 2" "Change Fire Mode"

km_addbinding x "Change Ammunition"

km_addbinding r "Reload"
km_addbinding "Joystick Button 3" "Reload"

# Most Used Controls
#----------------------------
km_addbinding "tab" "Toggle Mouse Look"
km_addbinding g "Use Item"
km_addbinding f "Drop Item"
km_addbinding t "Toggle Third Person Camera"

# Inventory Controls
#----------------------------
km_addbinding i "Toggle Inventory"

# Miscellaneous Controls
#----------------------------
km_addbinding "q" "Autorun"

km_addbinding "Z" "Zoom"
km_addbinding "SHIFT+Z" "Smooth Zoom"

km_addbinding "]" "Radar Increase"
km_addbinding "[" "Radar Decrease"


km_addbinding "Shift+C" "Toggle Chat Pane"
km_addbinding "O" "Toggle Character Pane"
km_addbinding "Shift+M" "Toggle Management Pane"
km_addbinding "Shift+O" "Toggle Outfit Pane"
km_addbinding "P" "Toggle Player Pane"
km_addbinding "Shift+R" "Toggle Proximity Map"
km_addbinding "Shift+V" "Toggle Vehicle Pane"


km_addbinding "SHIFT+P" "Toggle Help"

km_addbinding "ALT+n" "Cycle Character Names"
km_addbinding "K" "Toggle Stealth Suit"


# Shortcut hotbar keys
#----------------------------
km_addbinding "F1" "Use Quickslot 1"
km_addbinding "F2" "Use Quickslot 2"
km_addbinding "F3" "Use Quickslot 3"
km_addbinding "F4" "Use Quickslot 4"
km_addbinding "F5" "Use Quickslot 5"
km_addbinding "F6" "Use Quickslot 6"
km_addbinding "F7" "Use Quickslot 7"
km_addbinding "F8" "Use Quickslot 8"


# Camera Controls
#----------------------------
km_addbinding "home" "Raise Camera"
km_addbinding "end" "Lower Camera"
km_addbinding "num pad 9" "Raise Camera"
km_addbinding "num pad 3" "Lower Camera"
km_addbinding "num pad +" "Move Camera In"
km_addbinding "num pad -" "Move Camera Out"
km_addbinding "num pad 4" "Pan Camera Left"
km_addbinding "num pad 6" "Pan Camera Right"



