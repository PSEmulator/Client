############################################################
# FLYING and HOVER VEHICLE SPECIFIC KEYMAPS
############################################################
km_addbinding "E" "Flight Elevate"
km_addbinding "C" "Flight Lower"
km_addbinding "Joystick POV1 Up" "Flight Elevate"
km_addbinding "Joystick POV1 Down" "Flight Lower"

km_addbinding "W" "Forward"
km_addbinding "S" "Backward"

km_addbinding "Left Arrow" "Strafe Left"
km_addbinding "Right Arrow" "Strafe Right"
km_addbinding "A" "Strafe Left"
km_addbinding "D" "Strafe Right"
km_addbinding "Joystick POV1 Left" "Strafe Left"
km_addbinding "Joystick POV1 Right" "Strafe Right"

km_addbinding "Space" "Flight Afterburners"

