#############################################################
# FLYING and HOVER VEHICLE SPECIFIC KEYMAPS
#############################################################
km_addbinding "E"                 @GA_FlightElevate
km_addbinding "JoystickPOV1Up"    @GA_FlightElevate
km_addbinding "C"                 @GA_FlightLower
km_addbinding "JoystickPOV1Down"  @GA_FlightLower

km_addbinding "W"                 @GA_Forward
km_addbinding "S"                 @GA_Backward

km_addbinding "LeftArrow"         @GA_StrafeLeft
km_addbinding "A"                 @GA_StrafeLeft
km_addbinding "JoystickPOV1Left"  @GA_StrafeLeft
km_addbinding "RightArrow"        @GA_StrafeRight
km_addbinding "D"                 @GA_StrafeRight
km_addbinding "JoystickPOV1Right" @GA_StrafeRight

km_addbinding "Space"             @GA_FlightAfterburners
