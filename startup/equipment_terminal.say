	$sync

	#-----------------------------------
	$text @betty_equipment_04
	$play betty_equip_terminal_04.wav
	$sync

	#-----------------------------------
	$text @betty_equipment_05a
	$play betty_equip_terminal_05a.wav
	$flash WeaponTab
	$sync

	#-----------------------------------
	$text @betty_equipment_05b
	$play betty_equip_terminal_05b.wav
	$flash ArmorTab
	$sync

	#-----------------------------------
	$text @betty_equipment_05c
	$play betty_equip_terminal_05c.wav
	$flash EquipmentTab
	$sync

	#-----------------------------------
	$text @betty_equipment_05d
	$play betty_equip_terminal_05d.wav
