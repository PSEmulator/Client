	$play betty_equip_terminal_07b.wav
	$sync

	#-----------------------------------
	$flash FavoritesPage.DeleteButton
	$text @betty_equipment_07c
	$play betty_equip_terminal_07c.wav
	$sync

	#-----------------------------------
	$flash FavoritesPage.FavoritesListbox
	$text @betty_equipment_07d
	$play betty_equip_terminal_07d.wav
	$sync

	#-----------------------------------
	$text @betty_equipment_08
	$play betty_equip_terminal_08.wav
	$sync

	#-----------------------------------
	$quit
$end

