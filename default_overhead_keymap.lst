# Zoom Controls
#----------------------------

km_addbinding "Shift+Equal" "@GA_ZoomIn"
km_addbinding "NumPadAdd"   "@GA_ZoomIn"
km_addbinding "Z"           "@GA_ZoomIn"

km_addbinding "Shift+Minus" "@GA_ZoomOut"
